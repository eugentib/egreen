<%- include('partials/index_head.ejs')%>
    <div style="margin-top: 56px;">
        <ul class="nav nav-tabs" id="tablink">
            <li class="nav-item" data-cmd="get_from_db_dturi"><a class="nav-link active" role="tab" data-toggle="tab"
                    href="#tab-1">Gestionare Dispozitive</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" role="tabpanel" id="tab-1">
                <div class="container-fluid" style="padding-left: 0;padding-right: 0;">
                    <div class="row row-max-content">
                        <div class="col-md-4" style="width: 40rem;">
                            <!-- Prima coloană (o treime din lățime) -->
                            <div class="TitluMonetar">
                                <h3>Selectează Dispozitiv</h3>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group text-center">
                                        <label for="inputMAC"> MAC:</label>
                                        <input type="text" class="form-control" id="inputMAC"
                                            placeholder="Introduceți MAC-ul dispozitivului">
                                    </div>
                                </div>
                                <div class="col-md-2 text-center text-center">
                                    <span style="display: inline-block; margin-top: 20px;">sau</span>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group text-center">
                                        <label for="inputNrMag"> Nr Mag:</label>
                                        <input type="text" class="form-control" id="inputNrMag"
                                            placeholder="Introduceți NrMag">
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <button id="updateBtn" class="btn btn-primary btn-block">Update</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="updateATmegaBtn" class="btn btn-primary btn-block">Update
                                        ATmega</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="listDirBtn" class="btn btn-primary btn-block">List / dir</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button id="updateFSBtn" class="btn btn-primary btn-block">Update FS</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="resetATmegaBtn" class="btn btn-danger btn-block"
                                        style="border-color: red;">Reset ATmega</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="getLastBalotBtn" class="btn btn-primary btn-block">Get Last
                                        Balot</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button id="startSIMBtn" class="btn btn-primary btn-block">Start SIM</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="stopSIMBtn" class="btn btn-primary btn-block">Stop SIM</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="resetBalotiBtn" class="btn btn-danger btn-block"
                                        style="border-color: red;">Reset Baloti</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button id="resetBtn" class="btn btn-danger btn-block"
                                        style="border-color: red;">Reset</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="readBalNrBtn" class="btn btn-primary btn-block">Read Balot</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="listTrimiseBtn" class="btn btn-primary btn-block">List /trimise/</button>
                                </div>
                            </div>

                            <div id="DeviceInfo">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="nrPresari">Nr Presari:</label>
                                            <input type="text" id="nrPresari" class="form-control" disabled>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="nrBatolt">Nr batolt:</label>
                                            <input type="text" id="nrBatolti" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="rssi">Rssi:</label>
                                            <input type="text" id="rssi" class="form-control" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="swVersion">Sw Version:</label>
                                            <input type="text" id="swVersion" class="form-control" disabled>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="heap">Heap:</label>
                                            <input type="text" id="heap" class="form-control" disabled>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="uptime">Uptime:</label>
                                            <input type="text" id="uptime" class="form-control" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="LastFile">
                                <div class="form-group">
                                    <label for="lastFileContent">Last File Content:</label>
                                    <textarea id="lastFileContent" class="form-control" rows="5" disabled
                                        style="width: 100%;resize: none;"></textarea>
                                </div>
                            </div>

                            <div id="listaDispozitive">
                                <!-- Aici putem adăuga elemente pentru lista de dispozitive -->
                            </div>
                        </div>
                        <div class="col-md-1"></div> <!-- Coloană goală pentru a crea spațiu -->
                        <div class="col-md-7">
                            <!-- A doua coloană (două treimi din lățime) -->
                            <div class="TitluMonetar">
                                <h3>Detalii Dispozitiv</h3>
                            </div>
                            <div class="form-group">
                                <div style="display: flex; flex-direction: column;">
                                    <label for="lcd" style="margin-bottom: 5px;">LCD:</label>
                                    <textarea id="lcd" cols="32"
                                        style="font-family: monospace; white-space: pre; overflow-wrap: normal; width: 150px;resize: none;"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sw_resp">SW Response:</label>
                                <textarea class="form-control" id="sw_resp" rows="20" cols="80"></textarea>
                            </div>
                            <div id="detaliiDispozitiv">
                                <!-- Aici putem adăuga elemente pentru detaliile dispozitivului selectat -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><%- include('partials/index_footer.ejs') %>
        <script src="assets/js/comun.js"></script>
        <script src="assets/js/devmgr.js"></script>
        </body>

        </html>